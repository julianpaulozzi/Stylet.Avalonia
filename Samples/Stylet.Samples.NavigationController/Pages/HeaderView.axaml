<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Stylet.Samples.NavigationController.Pages.HeaderView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/sealoyal2018/stylet.avalonia"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Go to: " />
        <Button Command="{s:Action NavigateToPage1}" Margin="5,0">Page 1</Button>
        <Button Command="{s:Action NavigateToPage2}" Margin="5,0">Page 2</Button>
    </StackPanel>
</UserControl>